<!DOCTYPE html>
<html>
<head>
	<style>
		table,th,td 	{
 		 border : 1px solid black;
 		 border-collapse: collapse;
				}
		th,td 	{
  			padding: 5px;
			}
	</style>
</head>
<body>

	<button type="button" onclick="studentdata()">STUDENT-INFORMATION</button>
<br><br>
	<table id="demo"></table>

<script>
	function studentdata() {
  		var bro = new XMLHttpRequest();
  		bro.onreadystatechange = function() {
    		if (this.readyState == 4 && this.status == 200) {
      		myFunction(this);
    				}
  		};
  	bro.open("GET", "student.xml", true);
  	bro.send();
		}
	function myFunction(xml) {
  		var i;
  		var xmlDoc = xml.responseXML;
  		var table="<tr><th>USN</th><th>NAME</th></tr>";
  		var x = xmlDoc.getElementsByTagName("student");
  		for (i = 0; i <x.length; i++) { 
   	 table += "<tr><td>" + 
    	x[i].getElementsByTagName("usn")[0].childNodes[0].nodeValue +
    	"</td><td>" +
   	 x[i].getElementsByTagName("name")[0].childNodes[0].nodeValue +
   	 "</td></tr>";
  						}
  	document.getElementById("demo").innerHTML = table;
		}
</script>

</body>
</html>
