	 <script language="javascript">
		function check(form)
 			{
				 
 				if(form.userid.value=="PNP" && form.pswrd.value=="123")
  					{
						alert("Welcome to RVCE");
						var d = new Date();
						document.write(d);
						

					}
   				else
  					{
    						alert("Error Password or Username"); 
    					}
  			 }

